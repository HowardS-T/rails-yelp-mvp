<div class="m-3 d-flex flex-column justify-content-center align-items-center">
  <h1 class="m-3">Restaurants</h1>
  <%= link_to "Add new restaurant", new_restaurant_path, :class => "m-3 btn btn-dark" %>
</div>
<div class="d-flex justify-content-center">
  <ul class="d-flex flex-row flex-wrap justify-content-center align-items-center list-unstyled">
    <% @restaurants.each do |restaurant| %>
      <li><%= link_to restaurant.name, restaurant_path(restaurant), :class => "list-group-item list-group-item-action list-group-item-dark text-center"%></li>
    <% end %>
  </ul>
</div>
